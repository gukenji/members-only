<h2 id="side-h2" >Poste um segredo</h2>
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :body, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Novo segredo", autofocus: true %>
    </div>

  <%= f.button :submit, class: "button" %>
    </div>
<% end %>
